<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">

    <shape>
      <solid
          android:color="#e4c6cccc" />
      <stroke
          android:width="1dp"
          android:color="#f9fafb" />
      <corners
          android:radius="5dp"
          android:color="#eeeaea" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#fafaf9"
          android:endColor="#fafaf9" />
      <stroke
          android:width="2dp"
          android:color="#eeeaea" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>