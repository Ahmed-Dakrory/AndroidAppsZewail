<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/courseImageView"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/courseImageView"
        android:background="#87201f1f">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:id="@+id/linear1"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseNameTextView"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Restaurant Name"
                android:textColor="#f4f3f3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Cuisine Type"
                android:id="@+id/categoryTextView"
                android:textColor="#f4f3f3"
                android:textSize="15dp"
                android:layout_below="@+id/courseNameTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_margin="15dp"
            android:id="@+id/priceTextView"
            android:layout_alignBottom="@id/linear1"
            android:layout_alignParentRight="true"
            android:textColor="#d9d8d8"/>
    </RelativeLayout>


</RelativeLayout>